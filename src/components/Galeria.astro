---
// Recibe un array de im√°genes como prop
export interface Props {
  imagenes: {
    src: string;
    alt: string;
    titulo?: string;
  }[];
}

const { imagenes } = Astro.props;
---

<div class="galeria-grid">
  {imagenes.map((imagen) => (
    <div class="galeria-item">
      <img src={imagen.src} alt={imagen.alt} />
      {imagen.titulo && <p class="galeria-titulo">{imagen.titulo}</p>}
    </div>
  ))}
</div>

<style>
  .galeria-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }
  
  .galeria-item {
    overflow: hidden;
    border-radius: 0.5rem;
  }
  
  .galeria-item img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .galeria-item:hover img {
    transform: scale(1.05);
  }
  
  .galeria-titulo {
    padding: 0.5rem;
    text-align: center;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
  }
</style> 